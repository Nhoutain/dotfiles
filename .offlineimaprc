         'Mailing-list/spf13',
         'Github/synthese',
         'Github/scala-style'
    ]
nametrans = lambda folder: {
        '[Gmail]/Brouillons'          : 'nh.drafts',
        '[Gmail]/Corbeille'           : 'nh.trash',
        '[Gmail]/Messages envoy&AOk-s': 'nh.send',
        '[Gmail]/Spam'                : 'nh.spam',
        'INBOX'                       : 'nh.INBOX',
        'Mailing-list/mtheme'         : 'nh.ML.mtheme',
        'Mailing-list/spf13'          : 'nh.ML.spf13',
        'Github/synthese'             : 'nh.G.synt',
        'Github/scala-style'          : 'nh.G.scala'
    }.get(folder, folder)


