[Account stud]
localrepository = stud-Local
remoterepository = stud-Remote


[Repository nh-Local]
type = Maildir
localfolders = ~/.mail/nh
nametrans = lambda folder: {
        'nh.drafts'   : '[Gmail]/Brouillons',
        'nh.trash'    : '[Gmail]/Corbeille',
        'nh.send'     : '[Gmail]/Messages envoy&AOk-s',
        'nh.spam'     : '[Gmail]/Spam',
        'nh.INBOX'    : 'INBOX',
        'nh.ML.mtheme': 'Mailing-list/mtheme',
        'nh.ML.spf13' : 'Mailing-list/spf13',
        'nh.G.synt'   : 'Github/synthese',
        'nh.G.scala'  : 'Github/scala-style'
    }.get(folder, folder)

[Repository stud-Local]
